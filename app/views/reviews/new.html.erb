<div class="container my-5">
    <div class="row mx-auto my-3 justify-content-center">
        <div class="col-6 mt-5">
            <h1>New review</h1>

            <%= simple_form_for [@booking, @review] do |f| %>
            <%= f.input :content, placeholder: 'Rate your experience' %>
            <%= f.input :rating, collection: (0..5) %>
            <%if false %>
            <%= link_to 'Cancel', item_path(@item) %>
            <% end %>
            <%= f.submit "Submit" %>
            <% end %>
        </div>
    </div>
</div>