<div class="col-6 offset-3 mt-5 h-50">
    <div class="card mb-3" style="min-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <% if @item.photo.attached? %>
                <%= cl_image_tag @item.photo.key, height: 800, width: 400, crop: :fit, class: "card-image" %>
                <% else %>
                <p>Oops! This item doesn't have an image!</p>
                <% end %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <div class="row">
                        <div class="col-8">
                            <h5 class="card-title">Thanks for booking <%= @item.name %></h5>
                        </div>
                        <div class="col-4 pl-5">
                            <%= link_to image_tag('edit.svg', class: "auth-icon edit mr-2"), edit_item_booking_path %>
                            <%= link_to image_tag('delete.svg', class: "auth-icon delete"), item_booking_path(@booking), method: :delete %>
                        </div>
                    </div>
                    <p class="card-text">From: <%= @booking.start_date.strftime('%m/%d/%Y') %></p>
                    <p class="card-text">To: <%= @booking.end_date.strftime('%m/%d/%Y') %></p>
                    <%= link_to "Continue shopping", items_path, class: "button rent" %>
                    <%= link_to "My dashboard", dashboard_path, class: "button confirm" %>
                </div>
            </div>
        </div>
    </div>