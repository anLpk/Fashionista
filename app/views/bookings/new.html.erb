<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <h1> Booking for <%=  @item.name %> </h1>
      <%= simple_form_for(@booking) do |t| %>
        <%= f.input :name %>
        <%= t.input :starts_at, as: :date, input_html: { class: "datepicker" } %>
        <%= t.input :ends_at, as: :string, input_html: { class: "datepicker" } %>
        <%= t.submit "Book me", class: "btn btn-primary" %>
        <%= link_to "Back to Items", items_path, class: "btn btn-primary" %>
      <% end %>
  </div>
</div>
