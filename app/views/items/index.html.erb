<div class="row row-cols-6 mt-5 ml-5 pl-4">
    <%if false%>
    <% if policy(Item).new? %>
    <%= link_to 'Add New Item', new_item_path, class: 'btn btn-outline-danger' %>
    <%end%>
    <%end%>

    <% @items.each do |item| %>
    <div class="col mr-5 mb-5 item">
        <div class="d-flex flex-column">
            <div class="item-image h-75">
                <%= image_tag('background_images/item1', class: 'image') %>
            </div>
            <div class="item-content h-25 py-3">
                <div class="d-flex justify-content-between">
                    <p class="text-muted item-name"><%= item.name %></p>
                    <span class="item-price"><%= item.price %>AUD</span>
                </div>
                <%= link_to 'Show', item_path(item), class: 'button small' %>
            </div>
        </div>
    </div>
    <%end%>
</div>